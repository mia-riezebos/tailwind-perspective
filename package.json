{
        "name": "tailwind-perspective",
        "type": "commonjs",
        "version": "1.0.0",
        "description": "a tailwind plugin that adds 3d transform and perspective utilities, as well as some extended spacing values based on fractions",
        "main": "dist/index.js",
        "types": "dist/index.d.ts",
        "scripts": {
                "build": "tsc --removeComments",
                "release": "pnpm build && release-it",
                "prepublish": "pnpm build"
        },
        "repository": {
                "type": "git",
                "url": "git+https://github.com/mia-cx/tailwind-perspective.git"
        },
        "keywords": [
                "tailwindcss",
                "plugin",
                "radix",
                "react"
        ],
        "author": {
                "email": "mia@mia.cx",
                "name": "mia-cx"
        },
        "license": "MIT",
        "bugs": {
                "url": "https://github.com/mia-cx/tailwind-perspective/issues"
        },
        "homepage": "https://github.com/mia-cx/tailwind-perspective#readme",
        "peerDependencies": {
                "tailwindcss": ">=3.2.0"
        },
        "devDependencies": {
                "@types/node": "^18.15.3",
                "prettier": "^2.8.4",
                "release-it": "^15.8.0",
                "tailwindcss": "^3.2.7",
                "typescript": "^4.9.5"
        },
        "release-it": {
                "git": {
                        "commitMessage": "chore: release v${version}",
                        "tagName": "v${version}",
                        "requireCleanWorkingDir": false
                },
                "github": {
                        "release": true
                }
        }
}
